<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">#FFB005</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/oswald_bold</item>
        <item name="android:textColor">#3D3D3D</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat.Body1">
    </style>

    <style name="Text.Label" parent="Text">
        <item name="android:textColor">@color/label_text_color_selector</item>
        <item name="android:fontFamily">@font/mako_regular</item>
    </style>

    <style name="Text.Label.MainActivity" parent="Text">
        <item name="android:textColor">#3D3D3D</item>
        <item name="android:fontFamily">@font/mako_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.ErrorLabel" parent="Text">
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">@font/mako_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/errorButtonRed</item>
    </style>

    <style name="Text.Caption" parent="Text">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/oswald_bold</item>
    </style>

    <style name="Text.Caption.Small" parent="Text.Caption">
    </style>

    <style name="Text.Caption.Highlight" parent="Text.Caption">
        <item name="android:textColor">#FFB005</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
    </style>

    <style name="RadioButton.Left" parent="RadioButton">
    </style>

    <style name="RadioButton.Right" parent="RadioButton">
    </style>

    <style name="Input">
        <item name="android:gravity">right</item>
        <item name="android:hint">0</item>
        <item name="android:textColorHint">@drawable/hint_focus_selector</item>
    </style>

    <style name="Input.Price" parent="Input">
        <item name="android:hint">$0</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:fontFamily">@font/mako_regular</item>
    </style>

    <style name="Input.Count" parent="Input">
        <item name="android:textColor">@color/label_text_color_selector</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:fontFamily">@font/mako_regular</item>
    </style>

    <style name="Highlight">
        <item name="android:background">#000000</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="Done" parent="Highlight">
        <item name="android:background">#FFB005</item>
    </style>

    <style name="Error" parent="Highlight">
        <item name="android:background">#FF2121</item>
    </style>

    <style name="is_valid" parent="Highlight">
        <item name="android:background">@drawable/is_valid_selector</item>
    </style>

    <style name="UnitSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#BFBFBF</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#FFB005</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#FFFFFF</item>
    </style>

    <style name="Text.MainHeaderText">
        <item name="android:fontFamily">@font/mako_regular</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">13sp</item>
    </style>


</resources>
